label ending_evaluate:
    if debat_point == 8:
        jump true_ending
    elif debat_point < 8 and jokowi_petinju == True:
        jump petinju_end
    elif debat_point < 8 and jokowigamer == True:
        jump gamer_end
    else:
        jump alternateend


